<%= form_for(@book) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
    <br>
    <%= link_to 'Show', book_path(@book) %>
    <span>|<span>
    <%= link_to 'back', books_path %>
  </div>
<% end %>