<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Book</h1>

<%= form_for(@book) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <% if @book.errors.messages[:title].any? %>
    <span class="error"><%= @book.errors.messages[:title][0] %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
    <% if @book.errors.messages[:body].any? %>
    <span class="error"><%= @book.errors.messages[:body][0] %></span>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


